<%- include('./partials/head.ejs') %>
<%- include('./partials/restrictednav.ejs') %>
<section class="registercontain">
    <form class="registerform" action="./register" method="POST">
        <h1 class="registertitle">Create Your Account:</h1>
        <div class="registersectiontwo">
            <div class="regsec">
                <h3 class="registertext" id="regnametitle">First Name:</h3>
                <input name="firstName" class="reginput" id="regname" type="text" placeholder="example: Johnny"/>
            </div>
            <div class="regsec">
                <h3 class="registertext" id="regnametitle">Last Name:</h3>
                <input name="lastName" class="reginput" id="regname" type="text" placeholder="example: Appleseed"/>
            </div>
        </div>
        <div class="registersection">
            <div class="regsec" id="age">
                <h3 class="registertext">Age:</h3>
                <input name="age" class="reginput" id="reginputsmaller" type="number" placeholder=""/>
            </div>
            <div class="regsec" id="gender">
                <h3 class="registertext">Gender:</h3>
                <input name="gender" class="reginput" id="reginputsmall" type="text" placeholder=""/>
            </div>
            <div class="regsec" id="pic">
                <h3 class="registertext">Profile Picture:</h3>
                <input name="photo" class="reginput" id="reginputpic" type="url" placeholder="example: hostingwebsite.com/yourimage"/>
            </div>
        </div>
        <div class="registersectiontwo">
            <div class="regsec">
                <h3 class="registertext">Email:</h3>
                <input name="email" class="reginput" type="text" placeholder="example: example@domain.com"/>  
            </div>    
            <div class="regsec">
                <h3 class="registertext">Password:</h3>
                <input name="password" class="reginput" type="password" placeholder=""/>
            </div>
        </div>
        <div class="registersection">
            <button class="button" id="regbutton"> Welcome to fumblr! </button>    
        </div>    
    </form>
</section>
<%- include('./partials/footer.ejs') %>