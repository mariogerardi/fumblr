        <section>
            <h1>Create new quote</h1>
        </section>
        <form action="/fumblr/content" method="POST">
            <div>
                <label>Title</label>
            </div>
            <input class="input" type="text" placeholder="Title" name="title" />
            <div>
                <label>Quote</label>
            </div>
            <input class="input" type="text" placeholder="your quote" name="quote" />
            <div>
                <label>Author</label>
            </div>
            <input class="input" type="text" placeholder="your quote" name="author" />
            <div>
                <button class="button" id="submit">Submit</button>
                <a href="/fumblr/dashboard" class="button" id="cancel">Cancel</a>
            </div>
        </form>

